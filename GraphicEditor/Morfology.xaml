<Window x:Class="GraphicEditor.Morfology"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphicEditor"
        mc:Ignorable="d"
        Title="Morfology" Height="490" Width="900">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Border BorderBrush="Black" Margin="10,10,0,10" Height="440" Width="700" BorderThickness="2">
                <Image x:Name="canva" ClipToBounds="true"/>
            </Border>
            <GroupBox Header="Parametry" Margin="10,10,10,10" Width="170">
                <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                    <RadioButton Margin="0,10,0,0" IsChecked="True" Name="dil">Dylatacja</RadioButton>
                    <RadioButton Margin="0,10,0,0" Name="ero">Erozja</RadioButton>
                    <RadioButton Margin="0,10,0,0" Name="opn">Otwarcie</RadioButton>
                    <RadioButton Margin="0,10,0,0" Name="cls">Domknięcie</RadioButton>
                    <RadioButton Margin="0,10,0,10" Name="hom">Hit-or-miss</RadioButton>
                    <Button Click="Button_Click">Wykonaj</Button>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
