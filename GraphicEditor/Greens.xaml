<Window x:Class="GraphicEditor.Greens"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphicEditor"
        mc:Ignorable="d"
        Title="Greens" Height="485" Width="900">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Border BorderBrush="Black" Margin="10,10,0,10" Height="440" Width="700" BorderThickness="2">
                <Image x:Name="canva" ClipToBounds="true"/>
            </Border>
            <GroupBox Header="Wynik" Margin="10,10,10,10" Width="170">
                <StackPanel Orientation="Vertical" Margin="0,100,0,0">
                    <RadioButton Name="naive">Naiwna</RadioButton>
                    <RadioButton Name="hsv">HSV</RadioButton>
                    <Label Name="res" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Label>
                    <Label Margin="0,10,0,0">Tereny zielone procentowo</Label>
                    <Button Click="Button_Click">Do it</Button>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
