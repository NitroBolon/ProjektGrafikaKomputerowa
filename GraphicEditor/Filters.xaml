<Window x:Class="GraphicEditor.Filters"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphicEditor"
        mc:Ignorable="d"
        Title="Filters" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Border Width="500" Margin="10,10,0,10" BorderThickness="2" BorderBrush="Black">
                <Canvas Name="canvas"/>
            </Border>
            <GroupBox Margin="10, 10, 10, 10" Header="Parametry">
                <StackPanel Orientation="Vertical" Width="260">
                    <Button Margin="0,0,0,10" Click="F1_Click">Filtr uśredniający</Button>
                    <Button Margin="0,0,0,10" Click="F2_Click">Filtr medianowy</Button>
                    <Button Margin="0,0,0,10" Click="F3_Click">Sobel</Button>
                    <Button Margin="0,0,0,10" Click="F4_Click">Filtr górnoprzepustowy</Button>
                    <Button Margin="0,0,0,10" Click="F5_Click">Rozmycie gaussowskie</Button>
                    <Button Margin="0,0,0,10" Click="R_Click">Reset</Button>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
